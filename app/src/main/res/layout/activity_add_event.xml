<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddEventActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/eventcreator"
        android:contentDescription="@string/todo" />

    <EditText
        android:id="@+id/eventNameText"
        android:layout_width="204dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginStart="22dp"
        android:layout_marginTop="15dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal|fill_horizontal"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:visibility="visible" />

    <EditText
        android:id="@+id/eventCapacity"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/eventNameText"
        android:layout_alignBottom="@+id/eventNameText"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/eventNameText"
        android:background="@android:drawable/screen_background_light_transparent"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal|fill_horizontal"
        android:hint="@string/capacity"
        android:inputType="numberDecimal"
        android:singleLine="true" />

    <EditText
        android:id="@+id/descriptionText"
        android:layout_width="266dp"
        android:layout_height="60dp"
        android:layout_below="@+id/eventCapacity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="fill_horizontal"
        android:hint="@string/description"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="1"
        android:maxLines="10"
        android:singleLine="true" />

    <Button
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/descriptionText"
        android:layout_below="@+id/descriptionText"
        android:layout_centerVertical="true"
        android:layout_marginStart="21dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/date" />

    <Button
        android:id="@+id/addEventButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:text="@string/add_event" />

    <Button
        android:id="@+id/timetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/descriptionText"
        android:layout_below="@+id/descriptionText"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/time" />

    <Button
        android:id="@+id/location"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/type"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/location" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:hint="@string/type"
        android:layout_below="@+id/dateText"
        android:layout_marginTop="22dp" />

</RelativeLayout>